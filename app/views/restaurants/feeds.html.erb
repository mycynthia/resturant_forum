<div class="container">
    <ul class="nav nav-tabs">
      <li role="presentation"><%= link_to "首頁", root_path %></li>
      <li role="presentation" class="active"><%= link_to "最新動態", feeds_restaurants_path %></li>
      <li role= "presentation"><%= link_to 'Top10人氣餐廳', ranking_restaurants_path %></li>
      <li role="presentation"><%= link_to "美食達人", users_path %></li>
    </ul>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h3>餐廳最新動態</h3>
      <br>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">最新餐廳</div>
            <div class="panel-body">
              <% @recent_restaurants.each do |restaurant| %>
                <h4><%= link_to restaurant.name, restaurant_path(restaurant)  %></h4>
                <p><%= restaurant.category.name %></p>
                <p><%= restaurant.description %></p>
                <hr>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">最新評論</div>
            <div class="panel-body">
              <% @recent_comments.each do |comment| %>
                <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
                <p><%= comment.content %></p>
                <p>by <%= link_to comment.user.name, restaurant_path(comment.user) %></p>
                <hr>
              <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>


     


